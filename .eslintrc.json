{
  "extends": [
          "airbnb-base",
          "prettier"
  ],
  "plugins": [
          "import",
          "prettier"
  ],
  "env": {
          "es6": true,
          "node": true
  },
  "rules": {
          "no-await-in-loop": "off",
          "no-restricted-syntax": "off",
          "no-underscore-dangle": "off",
          "no-use-before-define": "off",
          "no-else-return": "off",
          "prefer-template": "off",
          "no-plusplus": "off",
          "prettier/prettier": ["error", {"singleQuote": true, "trailingComma": "es5", "printWidth": 90}]
  }
}